<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    xmlns:de.hdodenhof="http://schemas.android.com/tools"
    android:padding="6dip">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/achievement_image"
        android:layout_width="?android:attr/listPreferredItemHeight"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="6dip"
        android:src="@mipmap/clerigos"
        />

    <TextView
        android:id="@+id/achievement_description"
        android:layout_width="fill_parent"
        android:layout_height="26dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/achievement_image"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="Fazer primeira review"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/achievement_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/achievement_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toRightOf="@id/achievement_image"
        android:gravity="center_vertical"
        android:text="Reviewer"
        android:textSize="16sp" />

</RelativeLayout>