<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="6dip"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/friend_user_image"
            android:layout_width="?android:attr/listPreferredItemHeight"
            android:layout_height="fill_parent"
            android:layout_marginRight="6dip"
            android:contentDescription="TODO"
            android:src="@mipmap/blank_image" />
    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="1 day"
                android:id="@+id/timestamp"
                android:layout_gravity="right"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/achievement_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Duarte Pinto visited ClÃ©rigos and Ribeira do Porto!"
            android:textSize="16sp"
            android:layout_weight="0.5" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:layout_gravity="right">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/poi_image1"
            android:src="@mipmap/blank_image"
            android:layout_weight="0.5"
            android:layout_gravity="center_horizontal" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/poi_image2"
            android:src="@mipmap/blank_image"
            android:layout_weight="0.5"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</LinearLayout>